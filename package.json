{
  "name": "@my/theme",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "npm run -s lint",
    "start": "webpack --mode development --config webpack.config.js --devtool source-map --watch",
    "build": "webpack --mode development --config webpack.config.js --devtool source-map",
    "build:production": "webpack --mode production --config webpack.config.js",
    "pot": "gulp pot",
    "dist-archive": "gulp dist-archive",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "eslint src/scripts",
    "lint:styles": "stylelint \"src/styles/**/*.{css,sass,scss,sss,less}\""
  },
  "keywords": [
    "wordpress",
    "theme",
    "bootstrap"
  ],
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "author": "",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "browserslist": "^4.6.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "file-loader": "^4.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "gulp": "^4.0.2",
    "gulp-wp-pot": "^2.3.5",
    "gulp-zip": "^5.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpackbar": "^3.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "underscores-for-npm": "^1.0.0"
  }
}
